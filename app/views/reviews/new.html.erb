<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5, prompt: 'Rate the restaurant'  %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Home', restaurants_path, class: "btn btn-success"  %>
