<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: ["Italian", "Chinese", "French", "Belgian", "Japanese"], prompt: "Select cuisine" %>
  <%= f.input :address %>
  <%= f.input :phone_number%>
  <%= f.submit "Add Restaurant", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Home', restaurants_path, class: "btn btn-success"  %>
